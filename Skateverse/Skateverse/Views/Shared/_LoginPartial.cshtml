@using Microsoft.AspNetCore.Identity
@using Skateverse.Data.Models;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-controller="User" asp-action="ProfilePage" title="Manage">@User.Identity?.Name profile page</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="account-btn" asp-area="Identity" asp-controller="User" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="account-btn" asp-area="Identity" asp-controller="User" asp-action="Login">Login</a>
    </li>
}
</ul>
